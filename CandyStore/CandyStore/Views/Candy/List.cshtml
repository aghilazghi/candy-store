@model IEnumerable<CandyStore.Models.Candy>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport"/ content="width=device-width, initial-scale=1">
    <title>Candy Store</title>
</head>
<body>
        @foreach(var candy in Model)
        {
            <div>
                <h2>@candy.Name</h2>
                <h3>@candy.Price.ToString("c")</h3>
                <h4>@candy.Category.CategoryName</h4>
            </div>
        }
</body>
</html>
